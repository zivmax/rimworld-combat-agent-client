{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Build (Linux)",
            "type": "node",
            "request": "launch",
            "preLaunchTask": "build dll linux",
            "runtimeExecutable": "echo",
            "args": [
                "Pre-launch task completed"
            ]
        },
        {
            "name": "Debug (Linux)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build dll linux",
            "args": [
                "-quicktest",
            ],
            "program": "../../RimWorldLinux",
            "cwd": "${workspaceFolder}",
            "console": "internalConsole",
            "internalConsoleOptions": "neverOpen",
            "stopAtEntry": true
        },
        {
            "name": "Debug (Linux, Headless)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build dll linux",
            "args": [
                "-quicktest",
                "-batchmode",
                "-nographics"
            ],
            "program": "../../RimWorldLinux",
            "cwd": "${workspaceFolder}",
            "console": "internalConsole",
            "internalConsoleOptions": "neverOpen",
            "stopAtEntry": true
        },
        {
            "name": "Build (Windows)",
            "type": "node",
            "request": "launch",
            "preLaunchTask": "build dll windows",
            "runtimeExecutable": "cmd.exe",
            "args": [
                "/c",
                "echo",
                "Pre-launch task completed"
            ],
        },
        {
            "name": "Debug (Win64)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build dll windows",
            "args": [
                "-quicktest"
            ],
            "program": "..\\..\\RimWorldWin64.exe",
            "cwd": "${workspaceFolder}",
            "console": "internalConsole",
            "internalConsoleOptions": "neverOpen",
            "stopAtEntry": true
        },
        {
            "name": "Debug (Win64, Headless)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build dll windows",
            "args": [
                "-quicktest",
                "-batchmode",
                "-nographics"
            ],
            "program": "..\\..\\RimWorldWin64.exe",
            "cwd": "${workspaceFolder}",
            "console": "internalConsole",
            "internalConsoleOptions": "neverOpen",
            "stopAtEntry": true
        }
    ]
}