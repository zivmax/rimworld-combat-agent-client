{
    "name": "dotnet-devcontainer",
    "image": "mcr.microsoft.com/devcontainers/dotnet:8.0",
    "runArgs": [
        "--gpus",
        "all"
      ],
      "customizations": {
        "vscode": {
          "extensions": [
            "ms-dotnettools.vscode-dotnet-runtime",
            "ms-dotnettools.csdevkit"
          ]
        },
        "settings": {
          "terminal.integrated.shell.linux": "/bin/bash"
        }
      },
      "mounts": [
        "source=/home/bmu/GOG/Games/RimWorld/game,target=/mnt/game,type=bind,consistency=cached"
      ],
      "postStartCommand": "git config --global user.name Linzheng Tang && git config --global user.email tanglzh2022@shanghaitech.edu.cn"
}